<%= warning %>

<h1 class ="text-center">List answers</h1>

<%= link_to "CREATE NEW QUESTION", new_question_path, class: 'btn btn-warning m-5' %> 


<!--pagination pags-->
<div class="mx-5">
    <%== pagy_bootstrap_nav @pagy%>
</div>


<% @questions.each do |list| %>
    <div class="mx-5">
        <article class ="card mb-3">
            <div class ="card-body">

            <h4>Title :<%= list.title %></h4>

                <section class = "card-text">

                    <p>Body: <%= truncate (list.body), length: 150 %></p>

                    Created_at: <time datetime ="<%= list.formatted_created_at%>">
                    <%= list.formatted_created_at %></time><br>

                </section>    

                <%= link_to "Show", question_path(list.id), class: 'btn btn-primary' %> 
                <%= link_to "Edit", edit_question_path(list.id), class: 'btn btn-secondary'%> 
                <%= link_to "Destroy", question_path(list.id), class: 'btn btn-danger', data: {"turbo-method": :delete, turbo_confirm: 'Are you sure'}%>
            
            </div> 
        </article>
    </div>

<% end%>

<!--pagination pags-->
<div class="mx-5">
    <%== pagy_bootstrap_nav @pagy %>
</div>


<!-- truncate - cut text in front 
length - count symbol
pagy - pagination
-->