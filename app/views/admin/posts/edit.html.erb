<h2 class = "text-center">Edit element</h2>

    <%= form_with model: [:admin, @post], method: :put do |f| %>

    <div class="m-5">
        <%= f.label :title, class: 'form-label' %>
        <%= f.text_field :title, required: true, minlength: 2, class: 'form-control' %>
    </div>

    <div class="m-5">
        <%= f.label :body, class: 'form-label' %>
        <%= f.rich_text_area :body, required: true, minlength: 3, class: 'form-control' %>
    </div>


    <div class="m-5">
        <%= f.label :Attach_img, class: 'form-label' %>
        <%= f.file_field :preview_img %>
    </div>

    <%= f.submit 'Send form', class: 'btn btn-warning m-4'%>

<%end%>
</div>