
<hr class= "my-3">
<h3>Write your answer</h3>
<div class="form_answer">
<br>
    <%= form_with model: [@question, @answer] do |f| %>

        <div class = "mb-3 row">
            <div class = "col-sm-2">
                <h4><%= f.label :comment, class: 'mx-5'%></h4>
            </div>
            <div class = "col-sm-10">
                <%= f.text_area :body, required: true, minlength: 5, class: 'form-control' %>
            </div>
        </div>

        <%= f.submit "Answer submit", class:'btn btn-warning mx-5 mb-3'%>
    <% end%>
</div>